<h1>Create an Organizer Account</h1>
<%= form_with model: @organizer, url: organizer_registrations_path, local: true do |form| %>
  <% if @organizer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@organizer.errors.count, "error") %> prohibited this organizer from being saved:</h2>
      <ul>
        <% @organizer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.label :email %>
