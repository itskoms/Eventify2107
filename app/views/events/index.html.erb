<h1>All Events</h1>

<%= link_to 'New Event + ', new_event_path %>

<div style="margin-bottom: 20px;"></div>

<!-- Add more space in the columns -->
<table style="width: 100%; border-collapse: collapse;">
  <thead>
    <tr>
      <th style="padding: 10px; text-align: left;">Title</th>
      <th style="padding: 10px; text-align: left;">Date</th>
      <th style="padding: 10px; text-align: left;">Start Time</th>
      <th style="padding: 10px; text-align: left;">End Time</th>
      <th style="padding: 10px; text-align: left;">Location</th>
      <th style="padding: 10px; text-align: left;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td style="padding: 10px;"><%= event.title %></td>
        <td style="padding: 10px;"><%= event.start_date.strftime("%B %d, %Y") if event.start_date %></td>
        <td style="padding: 10px;"><%= event.end_date.strftime("%B %d, %Y") if event.end_date %></td>
        <td style="padding: 10px;"><%= event.start_time.strftime("%I:%M %p") if event.start_time %></td>
        <td style="padding: 10px;"><%= event.end_time.strftime("%I:%M %p") if event.end_time %></td>
        <td style="padding: 10px;"><%= event.location %></td>
        <td style="padding: 10px;">
          <%= link_to 'View', event_path(event) %> | 
          <%= link_to 'Edit', edit_event_path(event) %> | 
          <%= link_to 'Delete', event_path(event), method: :delete, data: { confirm: 'Are you sure you want to delete this event?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>