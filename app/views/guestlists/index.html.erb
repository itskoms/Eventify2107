<!-- app/views/guest_lists/index.html.erb -->

<div class="container mt-5">
  <h2 class="mb-4">Guest List for <%= @event.title %></h2>  <!-- Display the event title -->

  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">RSVP Status</th>
      </tr>
    </thead>
    <tbody>
      <% @guests.each do |guest| %>
        <tr>
          <td><%= guest.name %></td>  <!-- Display the guest's name -->
          <td><%= guest.email %></td>  <!-- Display the guest's email -->
          <td>
            <%= guest.guest_lists.find_by(event_id: @event.id).rsvp_status %>  <!-- Display RSVP status for this event -->
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- Optional button to go back to events list -->
  <div class="mt-4">
    <%= link_to 'Back to Events', events_path, class: "btn btn-secondary" %>
  </div>
</div>